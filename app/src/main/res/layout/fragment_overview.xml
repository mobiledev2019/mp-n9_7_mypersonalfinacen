<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lo_view"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Tổng thu:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_total_revenue"
            android:textSize="30dp"
            android:layout_marginTop="6sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tổng chi:"
            android:textSize="20dp"
            android:layout_marginTop="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_total_expenditure"
            android:textSize="30dp"
            android:layout_marginTop="6sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Số dư:"
            android:textSize="20dp"
            android:layout_marginTop="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_surplus"
            android:textSize="30dp"
            android:layout_marginTop="6sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lo_chart"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </com.github.mikephil.charting.charts.BarChart>
    </LinearLayout>

    <TextView
        android:id="@+id/mess"
        android:textSize="18dp"
        android:layout_below="@id/lo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/rdg_time"
            android:layout_width="wrap_content"
            android:layout_height="100dp">
            <RadioButton
                android:id="@+id/rb_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textSize="16dp"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rb_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="16dp"
                android:checked="false" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spn_month"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/rdg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

        <Spinner
            android:id="@+id/spn_year"
            android:visibility="gone"
            android:layout_toRightOf="@id/rdg_time"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_chart"
        android:src="@drawable/icon_chart"
        android:layout_margin="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/img_text"
        android:src="@drawable/icon_text"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>