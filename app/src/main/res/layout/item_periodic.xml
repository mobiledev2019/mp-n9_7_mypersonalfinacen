<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_periodic_topic"
        android:text="Sinh hoạt phí"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_periodic_name"
        android:text="Tiền nhà"
        android:layout_below="@id/txt_periodic_topic"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_periodic_time"
        android:text="12/4/2019"
        android:layout_toLeftOf="@id/rb_periodic"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_periodic_amount"
        android:text="3.000.000"
        android:layout_below="@id/txt_periodic_topic"
        android:layout_toLeftOf="@id/rb_periodic"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/rb_periodic"
        android:layout_toLeftOf="@id/btn_delete"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@id/txt_periodic_name"
        android:layout_marginTop="4dp"
        android:background="#6b6b6b"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_delete"
        android:background="@drawable/icon_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />

</RelativeLayout>